<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bravodavid56.eatme.MainActivity"
    android:orientation="vertical"
    android:layout_margin="-50dp"
    android:weightSum="3">

    <Button
        android:id="@+id/randomClick"
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#610000"
        android:onClick="onRandomClick"
        android:text="RANDOM"
        android:textColor="@color/white"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/filterBackground"
        android:backgroundTint="#00005c"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:onClick="onPrefClick"
        android:text="@string/filterlabel"
        android:textColor="@color/white"
        android:textSize="30sp"
       />


    <Button
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#004d00"
        android:onClick="onNearbyClick"
        android:text="NEARBY"
        android:textColor="@color/white"
        android:textSize="30sp"/>

</LinearLayout>
